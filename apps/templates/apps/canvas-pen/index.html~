<!-- Canvas Pen -->

<p>
  <button id="clear-canvas" class="btn">Clear</button>
  <input id="color-chooser" type="color"/>
</p>
<p>
  <canvas id="c"></canvas>
</p>

<script>
  $('#c').ready(function(){
    var c = $('#c')[0],
      ctx = c.getContext('2d');
    
    c.width = 300;
    c.height = 200;
    
    ctx.fillStyle = '#ddd';
    ctx.fillRect(0,0,c.width,c.height);
    
    c.x = c.getBoundingClientRect().left;
    c.y = c.getBoundingClientRect().top;
    console.log(c.x,c.y);
    
    /*$(c).mousedown(function(){
      $(c).css({
        cursor: 'default'
      });
    });*/
    
    mousedown = false;
    
    $(c).on('mousedown', function(){
      mousedown = true;
    });
    
    $(c).on('mouseup', function(){
      mousedown = false;
    });
    
    $(c).bind('mousemove',function(e){
      if(mousedown) {
        ctx.save()
        ctx.fillStyle = $('#color-chooser').val();
        ctx.fillRect(e.pageX-c.x,e.pageY-c.y,2,2);
        ctx.restore()
      }
    });
    
    $('#clear-canvas').click(function(){
      ctx.clearRect(0,0,c.width,c.height);
    });
  });
</script>



